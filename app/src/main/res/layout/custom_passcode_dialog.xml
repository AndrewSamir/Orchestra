<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@drawable/dialog_background"
    android:orientation="vertical"
    android:padding="0dp"
    android:weightSum="3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <EditText
            android:id="@+id/editTextPassCodeCustomDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
            android:background="@drawable/edit_text_background_white"
            android:ems="10"
            android:hint="PassCode"
            android:inputType="textEmailSubject"
            android:padding="15dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/buttonLinkAccountCustomDialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="7dp"
            android:layout_weight="1"
            android:background="@drawable/button_background_login"
            android:text="Link Account"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:elevation="8dp" />

        <Button
            android:id="@+id/buttonCancelCustomDialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="7dp"
            android:layout_weight="1"
            android:background="@drawable/button_background_login"
            android:text="Calncel"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:elevation="8dp" />

    </LinearLayout>

</LinearLayout>