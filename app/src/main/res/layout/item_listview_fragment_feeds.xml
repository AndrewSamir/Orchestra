<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:transitionName="testImage"

    android:orientation="horizontal">


    <android.support.v7.widget.CardView
        android:id="@+id/cvItemFeed"
        android:layout_width="fill_parent"
        android:layout_height="230dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:elevation="16dp"
        android:layout_marginBottom="15dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="20dp"
        card_view:contentPadding="16dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="7">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/textViewItemListViewFragmentFeeds"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="Material Design"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDateItemNewFeeds"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:gravity="center_horizontal"
                android:text="3 DEC 2017" />

            <TextView
                android:id="@+id/tvBodyItemNewFeeds"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.2"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                android:padding="15sp"
                android:text="lorem ipsum dolor sit amet  sdc sdc addds ccccccccv "
                android:textSize="15sp" />


        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>